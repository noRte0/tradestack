generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  image     String?
  role      String   @default("member")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tradeTechniques TradeTechnique[]
}

model TradeTechnique {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  technique String
  Contract  String
  LongShort String
  Leverage  String
  EntryPrice  String
  ExitPrice String
  Pip String
  Note  String
  Timeframe String
  result    String 
  createdAt DateTime @default(now())

  @@unique([userId, technique])
}